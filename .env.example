# =============================================================================
# OutreachPro - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# Required vars are marked with [REQUIRED], optional with [OPTIONAL]

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# [REQUIRED] Port to run the server on (Railway/Render will set this automatically)
PORT=8000

# [REQUIRED] Base URL of your frontend (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Security Keys
# -----------------------------------------------------------------------------
# [REQUIRED] Secret key for session encryption (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here

# [REQUIRED] JWT signing secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here

# [REQUIRED] Session secret for OAuth flow (generate with: openssl rand -hex 32)
SESSION_SECRET=your_session_secret_here

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
# [REQUIRED for production] PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Leave empty for SQLite in development
DATABASE_URL=

# -----------------------------------------------------------------------------
# Google OAuth & Gmail API
# -----------------------------------------------------------------------------
# [REQUIRED] Google Cloud Console OAuth 2.0 credentials
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# [OPTIONAL] Path to OAuth credentials file (legacy, not needed for web OAuth)
GOOGLE_CREDENTIALS_FILE=credentials.json

# [OPTIONAL] Your email address (only for CLI mode)
GMAIL_USER_EMAIL=your_email@gmail.com

# -----------------------------------------------------------------------------
# Google Gemini AI
# -----------------------------------------------------------------------------
# [REQUIRED] Gemini API Key for AI-powered email generation
# Get your API key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# Stripe Payments
# -----------------------------------------------------------------------------
# [REQUIRED] Stripe API keys
# Get from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_, pk_test_) for development
# Use live keys (sk_live_, pk_live_) for production
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...

# [REQUIRED] Stripe webhook signing secret
# Get from: https://dashboard.stripe.com/webhooks (after creating webhook)
# Webhook endpoint: https://your-api-domain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_...

# -----------------------------------------------------------------------------
# Email Configuration
# -----------------------------------------------------------------------------
# [OPTIONAL] Delay between sending emails (seconds)
EMAIL_DELAY_SECONDS=30

# [OPTIONAL] Maximum emails per day per user
MAX_EMAILS_PER_DAY=50

# [OPTIONAL] Default email template (professional, concise)
DEFAULT_TEMPLATE=professional

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage (Optional)
# -----------------------------------------------------------------------------
# [OPTIONAL] R2 configuration for backup storage of uploaded files
# Only needed if you want cloud backup of user uploads
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ENDPOINT_URL=
